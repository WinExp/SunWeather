<Page
    x:Class="SunWeather_WinUI3.Views.Pages.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SunWeather_WinUI3.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock FontSize="30" FontWeight="Bold"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,30,0,0">设置</TextBlock>
        <StackPanel Orientation="Vertical" Margin="30,110,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock VerticalAlignment="Center" Margin="0,0,0,10" FontSize="20" FontWeight="SemiBold">API 密钥</TextBlock>
                <StackPanel Orientation="Horizontal">
                    <PasswordBox x:Name="ApiKeyPasswordBox" PasswordRevealMode="Hidden"
                                 Width="200" PlaceholderText="输入 API 密钥" PasswordChanged="ApiKeyPasswordBox_PasswordChanged"/>
                    <CheckBox Content="显示 API 密钥" Margin="15,0,0,0"
                              Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock VerticalAlignment="Center" Margin="0,0,0,10" FontSize="20" FontWeight="SemiBold">数据单位</TextBlock>
                <RadioButtons x:Name="UnitRadioButtons">
                    <RadioButton x:Name="MetricRadioButton" Content="公制" Tag="Metric" Checked="RadioButton_Checked"/>
                    <RadioButton x:Name="InchRadioButton" Content="英制" Tag="Inch" Checked="RadioButton_Checked"/>
                </RadioButtons>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock VerticalAlignment="Center" Margin="0,0,0,10" FontSize="20" FontWeight="SemiBold">API 预加载</TextBlock>
                <ToggleSwitch x:Name="PreLoadAPIToggleSwitch" OffContent="不允许预加载" OnContent="允许预加载" Toggled="ToggleSwitch_Toggled"/>
            </StackPanel>
        </StackPanel>
        <Button x:Name="SaveConfigButton" Content="保存" Style="{ThemeResource AccentButtonStyle}"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,20,20" Width="85" Height="32" Opacity="0"
                Click="SaveConfigButton_Click">
            <Button.OpacityTransition>
                <ScalarTransition/>
            </Button.OpacityTransition>
        </Button>
    </Grid>
</Page>
